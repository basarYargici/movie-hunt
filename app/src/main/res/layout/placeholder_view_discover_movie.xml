<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/shimmer_imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@color/background"
        app:layout_constraintBottom_toTopOf="@+id/shimmer_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmer_tvCategories"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_btnInfo"
        app:layout_constraintStart_toStartOf="@+id/shimmer_btnAddToList"
        app:layout_constraintTop_toTopOf="@id/shimmer_guideline" />

    <View
        android:id="@+id/shimmer_btnAddToList"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_btnPlay"
        app:layout_constraintEnd_toStartOf="@id/shimmer_btnPlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmer_btnPlay"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/shimmer_btnPlay"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@color/background"
        android:text="play"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_btnInfo"
        app:layout_constraintStart_toEndOf="@+id/shimmer_btnAddToList"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_tvCategories" />

    <View
        android:id="@+id/shimmer_btnInfo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@color/background"
        android:text="info"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_btnPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_btnPlay"
        app:layout_constraintTop_toTopOf="@+id/shimmer_btnPlay" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shimmer_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shimmer_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".75" />

</androidx.constraintlayout.widget.ConstraintLayout>

