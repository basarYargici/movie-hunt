<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/cadet_grey</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowBackground">@color/grey</item>
        <item name="colorPrimary">@color/gunmetal</item>
        <item name="colorPrimaryVariant">@color/limed_spruce</item>
        <item name="colorOnPrimary">@color/timberwolf</item>
        <item name="colorSecondary">@color/surf</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="itemBackground">@color/dark_grey</item>
        <item name="itemIconTint">@drawable/bottom_navigation_icon_tint_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_icon_text_selector</item>
    </style>
</resources>